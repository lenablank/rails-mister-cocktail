<div class="cocktails-banner">
</div>

<div class="container-fluid mt-5">
<div class="row justify-content-center">
  <h1 style="text-align: center"><strong> <%= @cocktail.name %> </strong></h1>
</div>
</div>

  <div class="row justify-content-around">
    <div  class="container-fluid mt-5">
      <div class="row">
        <div class="container">
          <%= simple_form_for [@cocktail, @dose] do |f| -%>
            <%= f.input :description %>
            <%= f.association :ingredient %>
            <%= f.submit "Add an ingredient", class: "btn btn-dark" %>
          <% end -%>
        </div>
      </div>
    </div>
  </div>
