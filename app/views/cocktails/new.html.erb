<div class="container-fluid mt-5">
  <div class="row justify-content-around">
    <div>
      <i><%= cl_image_tag("barthekeserious_duprdv",width: 970, height: 250, crop: :fill) %></i>
    </div>
    <div  class="col-5 p-5">
      <div class="container">
        <h1><strong>Add a new cocktail</strong></h1>
          <%= simple_form_for [@cocktail] do |f| %>
            <%= f.input :name, label: "Name of the cocktail"%>
            <%= f.input :photo, as: :file %>
            <%= f.submit "Add", class: "btn btn-dark"%>
          <% end %>
      </div>
    </div>
  </div>
</div>
