<div class="container">

  <div>
    <h1><strong>Discover all cocktails or add a new one</strong></h1>
    <%= link_to "Add a new cocktail", new_cocktail_path, class:"btn btn-dark m-3" %>
  </div>

  <div class="cards display-grid mb-3">
    <h2>Life is better with a good cocktail. Choose yours!</h2>
    <div class="card">
      <% @cocktails.each do |cocktail| %>
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
      <% end %>
    </div>
  </div>
</div>
